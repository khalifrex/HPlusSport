@model HPlusSport.Client.Models.CategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this category?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Category Name</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Description ?? "No description")</dd>

            <dt class="col-sm-3">Product Count</dt>
            <dd class="col-sm-9">
                @if (Model.ProductCount > 0)
                {
                    <span class="badge bg-warning">@Model.ProductCount Products</span>
                    <small class="text-muted d-block">Note: You cannot delete a category that has products.</small>
                }
                else
                {
                    <span class="badge bg-secondary">0 Products</span>
                }
            </dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="@Model.Id" />
    
    @if (Model.ProductCount > 0)
    {
        <button type="submit" class="btn btn-danger" disabled>Cannot Delete - Has Products</button>
    }
    else
    {
        <button type="submit" class="btn btn-danger">Delete Category</button>
    }
    
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>