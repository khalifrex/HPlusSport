@model HPlusSport.Client.Models.ProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this product?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">
                @if (Model.Category != null)
                {
                    <span class="badge bg-info">@Model.Category.CategoryName</span>
                }
                else
                {
                    <span class="badge bg-secondary">No Category</span>
                }
            </dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">
                @if (Model.Qty > 0)
                {
                    <span class="badge bg-success">@Model.Qty in stock</span>
                }
                else
                {
                    <span class="badge bg-danger">Out of stock</span>
                }
            </dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete Product</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>